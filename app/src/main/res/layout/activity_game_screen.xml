<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yol"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/levelbar"
        android:background="#80000000"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:weightSum="3"
        >
        <LinearLayout
            android:id="@+id/levelbar2"
            android:background="#80000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:weightSum="3"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:background="@drawable/ic_baseline_directions_car_24"
                    ></ImageView>
                <TextView
                    android:id="@+id/questionnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="000"
                    android:textSize="30dp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:background="@drawable/ic_baseline_local_gas_station_24"
                    ></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/life"
                    android:text="000"
                    android:textColor="@color/white"
                    android:textSize="30dp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="end">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:background="@drawable/ic_baseline_monetization_on_24"
                    ></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/skor"
                    android:text="000"
                    android:textColor="@color/white"
                    android:textSize="30dp"></TextView>
            </LinearLayout>



        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"

            >
            <LinearLayout
                android:id="@+id/can_layout"
                android:clickable="true"
                android:background="@drawable/marketbuttonframe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="1dp"
                android:paddingLeft="4dp">


                <ImageView
                    android:layout_width="30dp"
                    android:clickable="false"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_local_gas_station_24">

                </ImageView>



                <TextView
                    android:layout_width="wrap_content"
                    android:clickable="false"
                    android:layout_height="wrap_content"
                    android:text=" = 10"
                    android:textSize="20dp"
                    android:textColor="@color/white"


                    ></TextView>
                <ImageView
                    android:layout_width="30dp"
                    android:clickable="false"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_monetization_on_24">

                </ImageView>
            </LinearLayout>

            <LinearLayout

                android:layout_marginLeft="5dp"
                android:clickable="true"
                android:id="@+id/show_ads_layout"
                android:visibility="visible"

                android:background="@drawable/marketbuttonframe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/video_ads"
                    android:layout_marginLeft="5dp"></ImageView>

                <TextView

                    android:layout_width="wrap_content"
                    android:clickable="false"
                    android:layout_height="wrap_content"
                    android:text="=5"
                    android:textColor="@color/white"
                    android:textSize="21.5dp"


                    ></TextView>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_baseline_monetization_on_24"></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:clickable="true"
                android:id="@+id/market_layout"
                android:background="@drawable/marketbuttonframe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">


                <ImageView
                    android:id="@+id/market_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_grocery"
                    android:layout_gravity="center"
                    android:clickable="false"
                    >

                </ImageView>

                <TextView
                    android:text="JOKERS"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:clickable="false"
                    ></TextView>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/questionImage"
        android:layout_width="350dp"
        android:layout_height="280dp"
        android:background="#80000000"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/levelbar"
        app:srcCompat="@drawable/crv"
        ></ImageView>
    <TextView
        android:id="@+id/questionText"
        android:background="#80000000"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Which brand is this car?"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/questionImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"

        ></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/questionText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:id="@+id/button12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/questionText"

            app:layout_constraintBottom_toTopOf="@id/button34"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/tus1"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:text="BUTTON1"
                    android:textStyle="bold"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="20dp"
                    app:strokeColor="@color/white"
                    app:strokeWidth="2dp"
                    android:backgroundTint="#30000000"
                    ></Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/tus2"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:text="BUTTON2"
                    android:textStyle="bold"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="20dp"
                    app:strokeColor="@color/white"
                    app:strokeWidth="2dp"
                    android:backgroundTint="#30000000"

                    ></Button>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/button34"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button12"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/tus3"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:text="BUTTON3"
                    android:textStyle="bold"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="20dp"
                    app:strokeColor="@color/white"
                    app:strokeWidth="2dp"
                    android:backgroundTint="#30000000"
                    ></Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/tus4"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:text="BUTTON4"
                    android:textStyle="bold"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="20dp"
                    app:strokeColor="@color/white"
                    app:strokeWidth="2dp"
                    android:backgroundTint="#30000000"
                    ></Button>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>